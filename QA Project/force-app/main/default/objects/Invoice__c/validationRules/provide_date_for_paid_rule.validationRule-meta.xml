<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>provide_date_for_paid_rule</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL( Status__c , &quot;Paid&quot; ),  ISBLANK( Paid_Date__c ))</errorConditionFormula>
    <errorMessage>Please provide a paid date if you wish to change the status to paid</errorMessage>
</ValidationRule>
